<!-- See documentation at http://doc.nuxeo.com/x/HgIz -->
<package type="addon" name="nuxeo-shibboleth-invitation" version="@VERSION@">
  <title>Shibboleth Invitation Addon</title>
  <description>The Nuxeo Shibboleth Invitation addon provides the ability to invite external user to access the Nuxeo Platform through basic or Shibboleth authentication.</description>
  <home-page>http://www.nuxeo.com</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <hotreload-support>false</hotreload-support>
  <require-terms-and-conditions-acceptance>true</require-terms-and-conditions-acceptance>
   <nuxeo-validation>nuxeo_certified</nuxeo-validation>
  <production-state>production_ready</production-state>
  <supported>true</supported>
  <platforms>
    <platform>server-@DISTRIB_VERSION@</platform>
    <platform>server-@DISTRIB_VERSION@-*</platform>
  </platforms>
  <visibility>PUBLIC</visibility>
  <!-- Dependencies on other packages -->
   <dependencies>
     <package>shibboleth-authentication</package>
     <package>nuxeo-platform-user-registration</package>
   </dependencies>
