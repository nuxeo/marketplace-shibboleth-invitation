<!-- See documentation at http://doc.nuxeo.com/x/HgIz -->
<package type="addon" name="nuxeo-shibboleth-invitation" version="@VERSION@">
  <title>Shibboleth Invitation Addon</title>
  <description>
    This addon provides the ability to invite external users to join Nuxeo
    through Nuxeo Authentication and/or
    Shibboleth Authentication<br/>
    Nuxeo Hotfix 6.0-HF18 is required.
  </description>
  <home-page>http://www.nuxeo.com</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <hotreload-support>false</hotreload-support>
  <require-terms-and-conditions-acceptance>true</require-terms-and-conditions-acceptance>
  <nuxeo-validation>nuxeo_certified</nuxeo-validation>
  <production-state>production_ready</production-state>
  <supported>false</supported>
  <platforms>
    <platform>cap-@DISTRIB_VERSION@</platform>
    <platform>cap-@DISTRIB_VERSION@-HF*</platform>
  </platforms>
  <visibility>MARKETPLACE</visibility>
  <dependencies>
    <package>shibboleth-authentication:2.2.0</package>
    <package>nuxeo-platform-user-registration:1.5.0</package>
  </dependencies>
  <license>LGPL 2.1</license>
  <license-url>http://www.gnu.org/licenses/lgpl-2.1.html</license-url>
</package>
